[core]
	editor = nvim
[alias]
	a = add
	b = !git --no-pager branch
	ba = !git --no-pager branch -a
	cb = checkout -b
	c = commit
	ck = checkout
	ckm = !git checkout "$(basename "$(git symbolic-ref refs/remotes/origin/HEAD)")"
	dd = diff
	ds = diff --staged
	d = diff --stat
	d1 = diff HEAD~
	d2 = diff HEAD~2
	l = log --color
	m = merge
	ps = push
	pu = pull
	ss = status
	s = status -s
